{
  "name": "trivia-react-redux",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "16 || 18"
  },
  "dependencies": {
    "@redux-devtools/extension": "3.2.5",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^13.5.0",
    "canvas-confetti": "^1.6.0",
    "crypto-js": "^4.1.1",
    "gh-pages": "^5.0.0",
    "node-sass": "^7.0.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-confetti": "^6.1.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.9.0",
    "react-redux": "^8.0.5",
    "react-router-dom": "^5.3.4",
    "react-scripts": "5.0.1",
    "redux": "^4.2.0",
    "redux-thunk": "^2.4.2"
  },
  "homepage": "lebarrichello.github.io/project-trivia-react-redux",
  "scripts": {
    "cy": "env CY_CLI=true cypress run",
    "cy:open": "cypress open --e2e --browser chrome",
    "start": "env ESLINT_NO_DEV_ERRORS=true react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --watchAll",
    "eject": "react-scripts eject",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "lint:styles": "npx stylelint '**/*.css'",
    "lint": "eslint --no-inline-config --no-error-on-unmatched-pattern -c .eslintrc.json . --ext .js,.jsx",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@sheerun/mutationobserver-shim": "0.3.3",
    "@testing-library/react": "^13.4.0",
    "@trybe/eslint-config-frontend": "^1.7.1",
    "cypress": "^10.11.0",
    "cypress-multi-reporters": "^1.6.2",
    "jest-localstorage-mock": "2.4.26",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.2.2",
    "mochawesome-report-generator": "^6.2.0",
    "stylelint": "^14.16.1",
    "stylelint-config-standard": "28.0.0",
    "stylelint-order": "^5.0.0"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "index.js",
      "serviceWorker.js",
      "src/services/*",
      "src/pages/Config.js",
      "src/redux/*",
      "src/store/*",
      "src/utils/*",
      "src/tests/helpers/*"
    ]
  }
}
